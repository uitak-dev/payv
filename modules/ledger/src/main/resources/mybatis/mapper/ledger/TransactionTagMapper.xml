<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.payv.ledger.infrastructure.persistence.mybatis.mapper.TransactionTagMapper">

    <resultMap id="TransactionTagRecordMap" type="com.payv.ledger.infrastructure.persistence.mybatis.record.TransactionTagRecord">
        <id property="transactionId" column="transaction_id" />
        <id property="tagId"         column="tag_id" />
    </resultMap>

    <delete id="deleteByTransactionId">
        delete from transaction_tag
        where transaction_id = #{transactionId}
    </delete>

    <insert id="insertTags">
        insert into transaction_tag
            (transaction_id, tag_id)
        values
        <foreach collection="records" item="r" separator=",">
            (#{r.transactionId}, #{r.tagId})
        </foreach>
    </insert>

    <select id="selectByTransactionId" resultMap="TransactionTagRecordMap">
        select transaction_id, tag_id
        from transaction_tag
        where transaction_id = #{transactionId}
    </select>

</mapper>